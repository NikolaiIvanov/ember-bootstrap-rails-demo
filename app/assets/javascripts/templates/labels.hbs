<section id="labels">
  <div class="page-header">
    <h1>Labels</h1>
  </div>
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>Labels</th>
        <th>Static</th>
        <th>Dynamic</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>
          {{#bsLabel content="Default"}}
        </td>
        <td>
          <code>&#123;{#bsLabel content="Default"}}</code>
        </td>
        <td>
          <code>&#123;{#bsLabel contentBinding="controller.label"}}</code>
        </td>
      </tr>
      <tr>
        <td>
          {{#bsLabel contentBinding="controller.label" typeBinding="controller.type"}}
        </td>
        <td>
          <code>&#123;{#bsLabel content="{{controller.label}}" type="{{controller.type}}"}}</code>
        </td>
        <td>
          <code>&#123;{#bsLabel contentBinding="controller.label" typeBinding="controller.type"}}</code>
        </td>
      </tr>
    </tbody>
  </table>

  {{! Observe form changes to update the controller label and type }}
  <form>
    {{#each type in types}}
    <label class="radio inline">
      <input {{action "select" type}} type="radio" name="type" value="{{type}}"> {{view Bootstrap.Label contentBinding="type" typeBinding="type"}}
    </label>
    {{/each}}
  </form>
</section>